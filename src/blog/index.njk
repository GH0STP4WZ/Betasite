---
layout: base.njk
title: Blog
subtitle: This is where I ramble about things
---

{% include "components/page-header.njk" %}

<div class="blog-page">
    <div class="container">
        <div class="blog-grid">
            {% for post in collections.posts %}
            <article class="blog-post card">
                <div class="post-header">
                    <div class="post-meta">
                        <time datetime="{{ post.data.date | date('Y-m-d') }}">{{ post.data.date | dateFormat }}</time>
                        {% if post.data.tags %}
                        <div class="post-category-tags">
                            {% for tag in post.data.tags | slice(0, 1) %}
                            <span class="post-category">{{ tag }}</span>
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                    <h2 class="post-title">
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                    </h2>
                    <p class="post-excerpt">
                        {{ post.templateContent | excerpt }}
                    </p>
                </div>
                <div class="post-footer">
                    {% if post.data.tags %}
                    <div class="post-tags">
                        {% for tag in post.data.tags %}
                        <span class="tag">{{ tag }}</span>
                        {% endfor %}
                    </div>
                    {% endif %}
                    <a href="{{ post.url }}" class="read-more">
                        Read More
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"/>
                        </svg>
                    </a>
                </div>
            </article>
            {% endfor %}

            {% if collections.posts.length == 0 %}
            <div class="no-posts card">
                <h3>No posts yet!</h3>
                <p>Add some Markdown files to the <code>src/posts/</code> folder to get started.</p>
            </div>
            {% endif %}
        </div>

        <div class="blog-sidebar">
            {% if collections.tagList.length > 0 %}
            <div class="sidebar-widget card">
                <h3>Tags</h3>
                <div class="tag-cloud">
                    {% for tag in collections.tagList %}
                    <a href="/blog/tags/{{ tag | slug }}/" class="tag-link">{{ tag }}</a>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            {% if collections.posts.length > 0 %}
            <div class="sidebar-widget card">
                <h3>Recent Posts</h3>
                <ul class="recent-posts">
                    {% for post in collections.posts | slice(0, 5) %}
                    <li>
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                        <time>{{ post.data.date | dateFormat }}</time>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.blog-page {
    padding-bottom: 3rem;
}

.blog-page .container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
}

.blog-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.blog-post {
    padding: 2rem;
    transition: all 0.3s ease;
}

.blog-post:hover {
    border-color: var(--primary-dim);
    transform: translateY(-2px);
}

.post-header {
    margin-bottom: 1.5rem;
}

.post-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
}

.post-meta time {
    color: var(--text-muted);
}

.post-category {
    background: var(--primary-dim);
    color: var(--primary-bright);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
}

.post-title {
    margin-bottom: 1rem;
}

.post-title a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.3s ease;
}

.post-title a:hover {
    color: var(--primary-bright);
}

.post-excerpt {
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0;
}

.post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
}

.post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
}

.tag {
    background: var(--surface-hover);
    color: var(--text-muted);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
}

.read-more {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
}

.read-more:hover {
    color: var(--primary-bright);
    transform: translateX(5px);
}

.read-more svg {
    width: 16px;
    height: 16px;
}

.blog-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.sidebar-widget {
    padding: 1.5rem;
}

.sidebar-widget h3 {
    color: var(--primary-bright);
    margin-bottom: 1rem;
    border-bottom: 2px solid var(--primary-dim);
    padding-bottom: 0.5rem;
}

.category-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.category-list li {
    margin-bottom: 0.75rem;
}

.category-list a {
    color: var(--text-muted);
    text-decoration: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: color 0.3s ease;
}

.category-list a:hover {
    color: var(--primary);
}

.category-list span {
    background: var(--surface-hover);
    color: var(--text-muted);
    padding: 0.1rem 0.5rem;
    border-radius: 10px;
    font-size: 0.8rem;
}

.recent-posts {
    list-style: none;
    padding: 0;
    margin: 0;
}

.recent-posts li {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border);
}

.recent-posts li:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
}

.recent-posts a {
    color: var(--text);
    text-decoration: none;
    font-weight: 500;
    display: block;
    margin-bottom: 0.25rem;
    transition: color 0.3s ease;
}

.recent-posts a:hover {
    color: var(--primary);
}

.recent-posts time {
    color: var(--text-muted);
    font-size: 0.8rem;
}

.no-posts {
    text-align: center;
    padding: 3rem 2rem;
}

.no-posts h3 {
    color: var(--primary-bright);
    margin-bottom: 1rem;
}

.no-posts code {
    background: var(--surface-hover);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: 'JetBrains Mono', monospace;
}

.tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.tag-link {
    background: var(--surface-hover);
    color: var(--text-muted);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
}

.tag-link:hover {
    background: var(--primary-dim);
    color: var(--primary-bright);
}

.post-category-tags {
    display: flex;
    gap: 0.5rem;
}

@media (max-width: 968px) {
    .blog-page .container {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .post-footer {
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
    }
}
</style>
