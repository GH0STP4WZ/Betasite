---
layout: base.njk
---

<article class="blog-post-single">
    <div class="container">
        <header class="post-header">
            <div class="post-meta">
                <time datetime="{{ date | date('Y-m-d') }}">{{ date | dateFormat }}</time>
                {% if tags %}
                <div class="post-tags">
                    {% for tag in tags %}
                    <span class="tag">{{ tag }}</span>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
            <h1 class="post-title">{{ title }}</h1>
            {% if themeColor %}
            <div class="post-theme-accent" style="background: {{ themeColor }}"></div>
            {% endif %}
        </header>

        <div class="post-content">
            {{ content | safe }}
        </div>

        <footer class="post-footer">
            <div class="post-navigation">
                {% set previousPost = collections.posts | getPreviousCollectionItem(page) %}
                {% set nextPost = collections.posts | getNextCollectionItem(page) %}

                {% if previousPost %}
                <a href="{{ previousPost.url }}" class="nav-link prev">
                    <span class="nav-label">← Previous</span>
                    <span class="nav-title">{{ previousPost.data.title }}</span>
                </a>
                {% endif %}

                {% if nextPost %}
                <a href="{{ nextPost.url }}" class="nav-link next">
                    <span class="nav-label">Next →</span>
                    <span class="nav-title">{{ nextPost.data.title }}</span>
                </a>
                {% endif %}
            </div>
        </footer>
    </div>
</article>

<style>
.blog-post-single {
    padding: 2rem 0 4rem;
}

.blog-post-single .post-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--border);
}

.blog-post-single .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
}

.blog-post-single .post-meta time {
    color: var(--text-muted);
    font-size: 1.1rem;
}

.blog-post-single .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
}

.blog-post-single .tag {
    background: var(--primary-dim);
    color: var(--primary-bright);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
}

.blog-post-single .post-title {
    font-size: 3rem;
    margin: 0;
    color: var(--text);
    line-height: 1.2;
}

.post-theme-accent {
    width: 100px;
    height: 4px;
    margin: 1.5rem auto 0;
    border-radius: 2px;
}

.post-content {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
    font-size: 1.1rem;
}

.post-content h1,
.post-content h2,
.post-content h3,
.post-content h4,
.post-content h5,
.post-content h6 {
    color: var(--primary-bright);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
}

.post-content h2 {
    font-size: 2rem;
    border-bottom: 2px solid var(--primary-dim);
    padding-bottom: 0.5rem;
}

.post-content h3 {
    font-size: 1.5rem;
}

.post-content p {
    margin-bottom: 1.5rem;
}

.post-content ul,
.post-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
}

.post-content li {
    margin-bottom: 0.5rem;
}

.post-content code {
    background: var(--surface-hover);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
}

.post-content pre {
    background: var(--surface-hover);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
}

.post-content pre code {
    background: none;
    padding: 0;
}

.post-content blockquote {
    border-left: 4px solid var(--primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--text-muted);
}

.post-footer {
    max-width: 800px;
    margin: 4rem auto 0;
    padding-top: 2rem;
    border-top: 2px solid var(--border);
}

.post-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
}

.nav-link {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: var(--surface);
    border: 2px solid var(--border);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
}

.nav-link:hover {
    border-color: var(--primary);
    transform: translateY(-2px);
}

.nav-link.next {
    text-align: right;
}

.nav-label {
    color: var(--primary);
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.nav-title {
    color: var(--text);
    font-weight: 500;
}

@media (max-width: 768px) {
    .blog-post-single .post-title {
        font-size: 2rem;
    }

    .blog-post-single .post-meta {
        flex-direction: column;
        gap: 1rem;
    }

    .post-navigation {
        grid-template-columns: 1fr;
    }

    .nav-link.next {
        text-align: left;
    }
}
</style>